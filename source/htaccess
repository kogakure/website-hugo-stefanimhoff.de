# Base Rewrite
RewriteEngine On
RewriteBase /

# ----------------------------------------------------------------------
# Append slash to URL
# ----------------------------------------------------------------------

RewriteCond %{REQUEST_FILENAME} !-f # Ignore files
RewriteCond %{REQUEST_URI} !/$      # Ignore urls with appended slash
RewriteCond %{REQUEST_URI} !(.*)/$  # Ignore any url with appended slash
RewriteRule ^(.*)$ $1/ [L,R=301]    # Append slash and redirect permanent 301

# ----------------------------------------------------------------------
# Redirecting/Removing sites
# ----------------------------------------------------------------------

# Redirects (Permanent)
Redirect 301 /notiz/das-koi-design-inspiration-und-idee /koi-design                                  # Der alte Titel war schlecht
